<UserControl x:Class="ScriptWriter.AutoCompleteDropdown"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="400" Background="Transparent" Focusable="False">
    <Grid Focusable="False">
        <Border Background="#2D2D2D" BorderBrush="#404040" BorderThickness="1" CornerRadius="4" Padding="0" Focusable="False">
            <StackPanel>
                <!-- Search Box -->
                <TextBox x:Name="SearchBox"
                         Background="#1E1E1E"
                         Foreground="#E0E0E0"
                         Padding="10,8"
                         FontSize="12"
                         BorderThickness="0,0,0,1"
                         BorderBrush="#404040"
                         TextChanged="SearchBox_TextChanged"
                         KeyDown="SearchBox_KeyDown"/>

                <!-- Results List -->
                <ListBox x:Name="ResultsList"
                         Background="#1E1E1E"
                         Foreground="#E0E0E0"
                         BorderThickness="0"
                         MaxHeight="250"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                         PreviewMouseLeftButtonUp="ResultsList_PreviewMouseLeftButtonUp"
                         MouseDoubleClick="ResultsList_MouseDoubleClick"
                         PreviewKeyDown="ResultsList_KeyDown">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" Padding="10,6" FontSize="12"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
