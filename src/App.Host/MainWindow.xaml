<Window x:Class="ScriptWriter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ScriptWriter Pro - Screenplay Editor" 
        Height="900" Width="1400"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E">
    <Grid Background="#1E1E1E">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <TextBlock Grid.Row="0" Text="âœï¸ SCRIPTWRITER PRO - Auto-Formatting" 
                   Foreground="#FFFFFF" FontSize="13" FontWeight="Bold" 
                   Background="#0D0D0D" VerticalAlignment="Center" Margin="15,8"/>

        <!-- Toolbar -->
        <Grid Grid.Row="1" Background="#252525">
            <StackPanel Orientation="Horizontal" Margin="10,5">
                <Button Content="ðŸ“„ New" Foreground="White" Background="#3A3A3A" Padding="10,5" Margin="0,0,3,0" Click="New_Click"/>
                <Button Content="ðŸ“ Open" Foreground="White" Background="#3A3A3A" Padding="10,5" Margin="0,0,3,0" Click="Open_Click"/>
                <Button Content="ðŸ’¾ Save" Foreground="White" Background="#3A3A3A" Padding="10,5" Margin="0,0,10,0" Click="Save_Click"/>
                <TextBlock Text="Auto-formatting: INT â€¢ EXT â€¢ ( ) â€¢ quotes â€¢ > less â€¢ FADE IN: â€¢ VO â€¢ OS" 
                           Foreground="#666666" VerticalAlignment="Center" FontSize="10" Margin="5,0,0,0"/>
            </StackPanel>
        </Grid>

        <!-- Editor -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="45"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Line Numbers -->
            <Border Grid.Column="0" Background="#0D0D0D" BorderBrush="#303030" BorderThickness="0,0,1,0">
                <TextBlock x:Name="LineNumbers" Foreground="#666666" FontFamily="Courier New" 
                           FontSize="11" Margin="5,10,5,0" IsHitTestVisible="False"/>
            </Border>

            <!-- Main Editor -->
            <TextBox Grid.Column="1" x:Name="ScriptEditor" 
                     FontFamily="Courier New" FontSize="12"
                     Padding="20,10,20,10" TextWrapping="Wrap" AcceptsReturn="True" AcceptsTab="False"
                     Background="#1E1E1E" Foreground="#E0E0E0" CaretBrush="#4CAF50"
                     VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"
                     PreviewKeyDown="ScriptEditor_PreviewKeyDown"
                     TextChanged="ScriptEditor_TextChanged"
                     SelectionChanged="ScriptEditor_SelectionChanged"/>
        </Grid>

        <!-- Status Bar -->
        <Grid Grid.Row="3" Background="#0D0D0D">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Column="0" x:Name="StatusText" Text="âœ“ Ready" Foreground="#4CAF50" Margin="10,5,0,5" FontWeight="Bold"/>
            <TextBlock Grid.Column="1" x:Name="CurrentElementText" Text="ðŸ“ Action" Foreground="#BB86FC" Margin="20,5,0,5" FontSize="10"/>
            <TextBlock Grid.Column="2" x:Name="CaretPosText" Text="Ln 1, Col 1" Foreground="#888888" Margin="15,5,0,5" FontSize="9"/>
            <TextBlock Grid.Column="3" x:Name="PageCountText" Text="P: 1" Foreground="#888888" Margin="15,5,0,5" FontSize="9"/>
            <TextBlock Grid.Column="4" x:Name="ElementCountText" Text="E: 0" Foreground="#888888" Margin="15,5,0,5" FontSize="9"/>
            <TextBlock Grid.Column="5" x:Name="WordCountText" Text="W: 0" Foreground="#888888" Margin="15,5,10,5" FontSize="9"/>
        </Grid>
    </Grid>
</Window>

