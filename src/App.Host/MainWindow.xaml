<Window x:Class="ScriptWriter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ScriptWriter Pro - Professional Screenwriting" 
        Height="900" Width="1400"
        WindowStartupLocation="CenterScreen"
        Background="#2A2A2A">
    <Grid Background="#2A2A2A">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <TextBlock Grid.Row="0" Text="SCRIPTWRITER PRO" Foreground="White" 
                   FontSize="16" FontWeight="Bold" Padding="15" Background="#1A1A1A"/>

        <!-- Toolbar -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Background="#2A2A2A">
            <Button Content="New" Foreground="White" Background="#404040" Padding="10,5" Margin="5"/>
            <Button Content="Open" Foreground="White" Background="#404040" Padding="10,5" Margin="5"/>
            <Button Content="Save" Foreground="White" Background="#404040" Padding="10,5" Margin="5"/>
            <Border Width="1" Background="#404040" Margin="5,0"/>
            <Button Content="Fountain Export" Foreground="White" Background="#404040" Padding="10,5" Margin="5"/>
            <Button Content="PDF Export" Foreground="White" Background="#404040" Padding="10,5" Margin="5"/>
        </StackPanel>

        <!-- Editor Area with Line Numbers -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Line Numbers -->
            <Border Grid.Column="0" Background="#1A1A1A" BorderBrush="#404040" BorderThickness="0,0,1,0">
                <TextBlock x:Name="LineNumbers" Foreground="#666666" FontFamily="Courier New" 
                           FontSize="12" Padding="5,20,5,0" IsHitTestVisible="False"/>
            </Border>

            <!-- Main Editor -->
            <Grid Grid.Column="1" Background="#1F1F1F">
                <TextBox x:Name="ScriptEditor" 
                         FontFamily="Courier New" 
                         FontSize="12"
                         Padding="20,20,20,20"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         AcceptsTab="True"
                         Background="#1F1F1F"
                         Foreground="#E0E0E0"
                         VerticalScrollBarVisibility="Auto"
                         HorizontalScrollBarVisibility="Auto"
                         PreviewKeyDown="ScriptEditor_PreviewKeyDown"
                         TextChanged="ScriptEditor_TextChanged"
                         SelectionChanged="ScriptEditor_SelectionChanged"/>
            </Grid>
        </Grid>

        <!-- Status Bar -->
        <StatusBar Grid.Row="3" Background="#1A1A1A" Foreground="#E0E0E0">
            <TextBlock x:Name="StatusText" Text="Ready" Foreground="#E0E0E0" Padding="10,0"/>
            <Border Width="1" Background="#404040" Margin="5,0"/>
            <TextBlock x:Name="PageCountText" Text="Page: 1" Foreground="#E0E0E0" Margin="20,0,0,0"/>
            <TextBlock x:Name="ElementCountText" Text="Elements: 0" Foreground="#E0E0E0" Margin="20,0,0,0"/>
            <TextBlock x:Name="WordCountText" Text="Words: 0" Foreground="#E0E0E0" Margin="20,0,0,0"/>
            <TextBlock x:Name="CurrentElementText" Text="Action" Foreground="#B0B0B0" Margin="20,0,0,0" FontSize="11"/>
            <TextBlock x:Name="CaretPosText" Text="Ln 1, Col 1" Foreground="#B0B0B0" Margin="20,0,0,0" FontSize="11"/>
        </StatusBar>
    </Grid>
</Window>
