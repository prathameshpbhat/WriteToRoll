<Window x:Class="ScriptWriter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:ScriptWriter"
        Title="ScriptWriter Pro - Professional Screenwriting" 
        Height="900" Width="1400"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E"
        Foreground="#E0E0E0">
    <Grid Background="#1E1E1E">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <Border Grid.Row="0" Background="#0D0D0D" BorderBrush="#404040" BorderThickness="0,0,0,1" Padding="15,10">
            <TextBlock Text="âœï¸ SCRIPTWRITER PRO - Auto-Formatting &amp; Auto-Complete Enabled" 
                       Foreground="#FFFFFF" FontSize="14" FontWeight="Bold"/>
        </Border>

        <!-- Toolbar -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Background="#252525" Margin="10">
            <Button Content="ðŸ“„ New" Foreground="White" Background="#3A3A3A" Padding="12,6" Margin="0,0,5,0" Click="New_Click" Cursor="Hand"/>
            <Button Content="ðŸ“ Open" Foreground="White" Background="#3A3A3A" Padding="12,6" Margin="0,0,5,0" Click="Open_Click" Cursor="Hand"/>
            <Button Content="ðŸ’¾ Save" Foreground="White" Background="#3A3A3A" Padding="12,6" Click="Save_Click" Cursor="Hand"/>
            <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="10,0"/>
            <TextBlock Text="Auto-complete: Type FADE, CUT, INT, EXT, etc." 
                       Foreground="#888888" VerticalAlignment="Center" Margin="10,0" FontSize="11"/>
        </StackPanel>

        <!-- Editor Container -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="45"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Line Numbers -->
            <Border Grid.Column="0" Background="#0D0D0D" BorderBrush="#404040" BorderThickness="0,0,1,0">
                <TextBlock x:Name="LineNumbers" Foreground="#666666" FontFamily="Courier New" FontSize="11" 
                           Padding="5,20,5,0" IsHitTestVisible="False"/>
            </Border>

            <!-- Editor + Dropdown Overlay -->
            <Grid Grid.Column="1">
                <TextBox x:Name="ScriptEditor" 
                         FontFamily="Courier New" FontSize="12"
                         Padding="20,20,20,20" TextWrapping="Wrap" AcceptsReturn="True" AcceptsTab="False"
                         Background="#1E1E1E" Foreground="#E0E0E0" CaretBrush="#4CAF50"
                         VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"
                         PreviewKeyDown="ScriptEditor_PreviewKeyDown"
                         TextChanged="ScriptEditor_TextChanged"
                         SelectionChanged="ScriptEditor_SelectionChanged"/>

                <!-- Auto-Complete Dropdown (Overlay) -->
                <local:AutoCompleteDropdown x:Name="AutoCompleteDropdown"
                                            Visibility="Collapsed"
                                            VerticalAlignment="Top"
                                            HorizontalAlignment="Left"
                                            Margin="20,50,0,0"
                                            ItemSelected="AutoCompleteDropdown_ItemSelected"/>
            </Grid>
        </Grid>


        <!-- Status Bar -->
        <StatusBar Grid.Row="3" Background="#0D0D0D" Foreground="#E0E0E0" BorderBrush="#404040" BorderThickness="0,1,0,0">
            <TextBlock x:Name="StatusText" Text="âœ“ Ready" Foreground="#4CAF50" FontWeight="Bold" Margin="10,0"/>
            <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}"/>
            <TextBlock x:Name="CurrentElementText" Text="ðŸ“ Action" Foreground="#BB86FC" Margin="10,0" FontSize="11"/>
            <TextBlock x:Name="CaretPosText" Text="Ln 1, Col 1" Foreground="#888888" Margin="20,0" FontSize="10"/>
            <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}"/>
            <TextBlock x:Name="PageCountText" Text="Page: 1" Foreground="#888888" Margin="10,0" FontSize="11"/>
            <TextBlock x:Name="ElementCountText" Text="Elements: 0" Foreground="#888888" Margin="15,0" FontSize="11"/>
            <TextBlock x:Name="WordCountText" Text="Words: 0" Foreground="#888888" Margin="15,0" FontSize="11"/>
        </StatusBar>
    </Grid>
</Window>

